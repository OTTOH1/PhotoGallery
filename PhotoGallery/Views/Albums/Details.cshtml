@using PhotoGallery.Domain
@model PhotoGallery.Domain.Album

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>

<div clas="row" class="text-center">
    <a href='@Url.Action("ShowOriginalPhoto", "Photos", new {id = Model.MainPhoto.PhotoId})'
       title="@Model.Description">
        <img src='@Url.Action("ShowMediumPhoto", "Photos", new {id = Model.MainPhoto.PhotoId})'
             alt="@Model.Description"
             class="img-thumbnail" />
    </a>
</div>

<div class="row">
    @foreach (Photo photo in Model.Photos)
    {
        <div class="col-lg-3 col-md-4 col-sm-6">
            <a href='@Url.Action("ShowOriginalPhoto", "Photos", new {id = photo.PhotoId})'
               title="@photo.Description" class="thumbnail">
                <p>@photo.Name</p>
                <img src='@Url.Action("ShowThumbPhoto", "Photos", new {id = photo.PhotoId})'
                     alt="@photo.Description" />
            </a>
        </div>
    }
</div>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
