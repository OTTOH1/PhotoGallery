@model PhotoGallery.Domain.Photo


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">@Model.Name</h4>
        </div>
        <div class="modal-body">
            <a href='@Url.Action("ShowOriginalPhoto", "Photos", new {id = Model.PhotoId})'
               title="@Model.Description">
                <img src='@Url.Action("ShowMediumPhoto", "Photos", new {id = Model.PhotoId})'
                     alt="@Model.Description"
                     class="img-thumbnail" />
            </a>
            @Html.LabelFor(model => model.CreationDate) : @Model.CreationDate <br />
            @Html.LabelFor(model => model.Location) : @Html.DisplayFor(model => model.Location)
            </div>
        </div>
    </div>
</div>
