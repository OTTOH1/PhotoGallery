@using PhotoGallery.Domain
@model PhotoGallery.Models.AddToItemViewModel

@{
    ViewBag.Title = "Add to Album";;
}

<h2>Add to Album</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Photo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Photo.PhotoId)

        <dt>
            @Html.DisplayNameFor(model => model.Photo.Name)
        </dt>

        <div class="form-group">
            @Html.LabelFor(model => model.Photo.Name, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                <select>
                    @foreach (Album album in Model.Albums)
                    {
                        <option value="@album.Id">@album.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add To Album" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
