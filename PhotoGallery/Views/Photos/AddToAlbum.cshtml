@using PhotoGallery.Domain
@model PhotoGallery.Models.AddToItemViewModel

@{
    ViewBag.Title = "Add to Album";;
}

<h2>Add to Album</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Photo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input Name="photoId" name="SomeProperty" id="photoId" type="hidden" value="@Model.Photo.PhotoId" /> 

        <div class="form-group">
            <div class="col-md-10">
                <select name="albumId">
                    <option disabled>Select the name of the Album</option>
                    @foreach (Album album in Model.Albums)
                    {
                        <option value="@album.Id">@album.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add To Album" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
