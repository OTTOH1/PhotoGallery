@model IEnumerable<PhotoGallery.Domain.Photo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThumbPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LargePhoto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedOn)
        </td>
        <td>
            <a href='@Url.Action("show", "image", new {id = item.PhotoId})'
               title="@item.Description">
                <img src='@Url.Action("show", "image", new {id = item.PhotoId})'
                     alt="@item.Description" />
            </a>
            @Html.DisplayFor(modelItem => item.ThumbPhoto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LargePhoto)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PhotoId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PhotoId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PhotoId })
        </td>
    </tr>
}

</table>
