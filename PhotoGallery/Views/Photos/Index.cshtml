@model IEnumerable<PhotoGallery.Domain.Photo>

@{
    ViewBag.Title = "Photos";
}

<h2>Photos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<div class="col-sm-12">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <a class="thumbnail"
                   data-target="#photoModal"
                   data-toggle="modal"
                   data-id="@item.PhotoId">
                    <p>@item.Name</p>
                    <img src='@Url.Action("ShowThumbPhoto", "Photos", new {id = item.PhotoId})'
                         alt="@item.Description"/>
                </a>
                @Html.ActionLink("Delete", "Delete", new { id = item.PhotoId })
            </div>
        }
    </div>
</div>

<div class="modal" id="photoModal" tabindex="-1" data-url='@Url.Action("PhotoModalDialog")'>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/photos")
}